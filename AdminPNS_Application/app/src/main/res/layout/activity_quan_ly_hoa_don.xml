<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
  <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      android:layout_marginLeft="5dp"
      android:layout_marginTop="10dp"
      android:gravity="center"
      >
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/ivbackHD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_baseline_arrow_back_ios_new_24"
        android:text="Menu"
        android:background="@color/white"
        android:textColor="#40bfff"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:textSize="20dp"/>


  </LinearLayout>

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:padding="10dp"
      android:layout_margin="10dp"
      android:orientation="horizontal">
    <androidx.appcompat.widget.AppCompatButton
        android:backgroundTint="#40bfff"
        android:textColor="@color/white"
        android:background="@drawable/backgroud_edittextdialog_themsp"
        android:id="@+id/btnDahuyHoaDon"
        android:textAllCaps="false"
        android:text="Đã hủy"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"/>
   <androidx.appcompat.widget.AppCompatButton
       android:backgroundTint="#40bfff"
       android:textColor="@color/white"
       android:layout_marginLeft="8dp"
       android:background="@drawable/backgroud_edittextdialog_themsp"
       android:textAllCaps="false"
       android:id="@+id/btnChoduyetHoaDon"
       android:text="Chờ duyệt"
       android:layout_width="0dp"
       android:layout_height="wrap_content"
       android:layout_weight="1"/>

    <androidx.appcompat.widget.AppCompatButton
        android:backgroundTint="#40bfff"
        android:textColor="@color/white"
        android:layout_marginLeft="8dp"
        android:background="@drawable/backgroud_edittextdialog_themsp"
        android:textAllCaps="false"
        android:id="@+id/btnDaduyetHoaDon"
        android:text="Đã duyệt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"/>

  </LinearLayout>

  <androidx.recyclerview.widget.RecyclerView
      android:id="@+id/rcvQuanLyHoaDon"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_margin="8dp"
      android:padding="8dp"
      />







</LinearLayout>